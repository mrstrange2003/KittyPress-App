<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/toolbar_bg"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="24dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Compression"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:paddingBottom="14dp" />

            <Button
                android:id="@+id/btn_pick_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kitty_button"
                android:text="Select Files"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/button_text"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btn_pick_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kitty_button"
                android:text="Select Folder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/button_text"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btn_compress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kitty_button"
                android:text="Compress"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/button_text"
                android:layout_marginBottom="28dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¦ Extraction"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:paddingBottom="14dp" />

            <Button
                android:id="@+id/btn_pick_archive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kitty_button"
                android:text="Select KITTY File"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/button_text"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btn_extract_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kitty_button"
                android:text="Extract"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/button_text"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ… Ready"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="8dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="0"
                android:indeterminate="false"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_progress_pct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:visibility="gone"
                android:paddingBottom="30dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
