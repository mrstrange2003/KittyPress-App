<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="@color/button_pressed_start"
                android:endColor="@color/button_pressed_end" />
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="@color/button_start"
                android:endColor="@color/button_end" />
            <corners android:radius="16dp"/>
            <padding android:left="14dp" android:right="14dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>
